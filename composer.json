{
    "name": "calderawp/gutenberg-modules",
    "require": {
        "php": "^7.1",
        "symfony/console": "^4.0",
        "symfony/process": "^4.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.2",
        "phpunit/phpunit": "^7.1"
    },
    "license": "GPL-2.0",
    "authors": [
        {
            "name": "Josh Pollock",
            "email": "josh@calderawp.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "calderawp\\gutenbergModules\\": "src"
        }
    },
    "scripts" : {
        "tests" : "composer fixes && composer sniffs && composer test",
        "test": "phpunit --testsuite=unit",
        "phpunit-v": "phpunit --version",
        "sniffs" : "phpcs src/ && phpcs tests/",
        "fixes" : "phpcbf src/ && phpcbf tests/"
    },
    "autoload-dev": {
        "psr-4": {
            "calderawp\\interopGhostTests\\Tests\\": "tests/"
        }
    }
}
